
@model IEnumerable<RestaurantRater.Models.Restaurant>

@{ 
    ViewBag.Title = "Index"; // ViewBags are basically dictionaries, where the key in this case is Title and the value is "Index".
}

<h2> Index </h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">   <!--Create a Table-->
    <tr>                <!--Create a TableRow-->
        <th>
            <!--Create a Table Header-->
            @Html.DisplayNameFor(model => model.Name) <!--This DisplayNameFor takes in some property and displays the name, just like the method's name implies-->
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rating)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.RestaurantID })
        @Html.ActionLink("Details", "Details", new { id = item.RestaurantID })
        @Html.ActionLink("Delete", "Delete", new { id = item.RestaurantID })
    </td>
</tr>
    }
</table>